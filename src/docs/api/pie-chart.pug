
extends components

block variables
  - var pageID = 'api/pie-chart'
  - var pageTitle = 'Pie Chart'
  - var prism = true

block article
  h3.ui-header-primary= pageTitle
  .ui-container-grid
    .ui-grid-50.ui-mobile-expand
      #simple-pie-chart-svg
    .ui-grid-50.ui-mobile-expand
      #simple-pie-chart-canvas
  div
    pre: code.language-markup.
      &lt;div id="simple-pie-chart-svg"&gt;&lt;/div&gt;
      &lt;div id="simple-pie-chart-canvas"&gt;&lt;/div&gt;

      &lt;script&gt;
        var data = [
          { browser: 'Chrome', percentage: 0.4707 },
          { browser: 'Firefox', percentage: 0.1543 },
          { browser: 'IE', percentage: 0.1106 },
          { browser: 'Opera', percentage: 0.0217 },
          { browser: 'Others', percentage: 0.0380 },
          { browser: 'Safari', percentage: 0.2047 }
        ];
        d3.pieChart(data, { id: 'simple-pie-chart-svg' });
        d3.pieChart(data, {
          id: 'simple-pie-chart-canvas',
          renderer: 'canvas',
          sort: function (a, b) {
            return d3.descending(a.percentage, b.percentage);
          },
          innerRadius: 100,
          stroke: '#fff'
        });
      &lt;/script&gt;

