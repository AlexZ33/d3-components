
extends components

block variables
  - var pageID = 'api/bar-chart'
  - var pageTitle = 'Bar Chart'
  - var prism = true

block article
  h3.ui-header-primary= pageTitle
  .ui-container-grid
    .ui-grid-50.ui-mobile-expand
      #bar-chart-default
    .ui-grid-50.ui-mobile-expand
      #bar-chart-stacked
  div
    pre: code.language-markup.
      &lt;div id="bar-chart-default"&gt;&lt;/div&gt;
      &lt;div id="bar-chart-stacked"&gt;&lt;/div&gt;

      &lt;script&gt;
        d3.json('../data/china-cities-population.json', function (data) {
          d3.shuffle(data);
          d3.barChart(data, { id: 'bar-chart-default' });
          d3.barChart(data, {
            id: 'bar-chart-stacked',
            stacked: true,
            horizontal: true,
            gridY: {
              show: true
            },
            tooltip: {
              html: function (d) {
                return d.city + ': ' + d.population + ' (' + d.type + ')';
              }
            }
          });
        });
      &lt;/script&gt;

block append foot
  script.
    d3.json('../data/china-cities-population.json', function (data) {
      d3.shuffle(data);
      d3.barChart(data, { id: 'bar-chart-default' });
      d3.barChart(data, {
        id: 'bar-chart-stacked',
        stacked: true,
        horizontal: true,
        gridY: {
          show: true
        },
        tooltip: {
          html: function (d) {
            return d.city + ': ' + d.population + ' (' + d.type + ')';
          }
        }
      });
    });
