extends ../layout

block variables
  - var pageID = 'gallery/china-map'
  - var pageTitle = 'Map of China'
  - var minimal = true
  - var responsive = true

block append head
  style.
    html {
      font-size: 20px;
    }
    body {
      background-color: #00192e;
      color: #fff;
    }
    #container-china-map {
      width: 100vw;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
    }
    #container-cities-population {
      width: 20rem;
      padding: 1rem;
      position: fixed;
      top: 4rem;
      left: 1rem;
      background-color: #002f47;
      opacity: 0.75;
      border-radius: 1rem;
    }
block body
  body
    #container-china-map: #bubble-map-tile
    #container-cities-population: #bar-chart-stacked
    script(src=appDist + '/jquery-3.2.1.min.js')
    script(src=appDist + '/ui-schema-0.4.4.min.js')
    script(src=appDist + '/d3-4.9.1.min.js')
    script(src=appDist + '/d3-components-' + version + '.min.js')
    script(src=appDist + '/d3-scale-chromatic-1.1.0.min.js')
    script(src=appDist + '/d3-tile-0.0.4.min.js')
    script(src=appDist + '/d3-contour-1.1.0.min.js')
    script.
      d3.json('../dist/maps/china.geo.json', function (provinces) {
        d3.choroplethMap([], {
          id: 'bubble-map-tile',
          map: {
            name: 'china',
            data: provinces,
            center: [100, 30]
          },
          tile: {
            show: true,
            scale: 5120,
            zoomable: false,
            image: {
              href: function (d) {
                var server = 'https://map.geoq.cn/ArcGIS/rest/services/ChinaOnlineStreetPurplishBlue/MapServer/tile/';
                return server + d.z + '/' + d.y + '/' + d.x;
              }
            },
            wrap: true
          },
          stroke: 'none',
          fill: 'none',
          tooltip: {
            show: false
          }
        });
        d3.json('../dist/maps/china-cities.geo.json', function (cities) {
          d3.json('../data/china-cities-gdp.json', function (data) {
            d3.bubbleMap(data, {
              id: 'bubble-map-tile',
              standalone: false,
              map: {
                name: 'china',
                data: cities,
                center: [100, 30]
              },
              tile: {
                show: true,
                scale: 5120
              }
            });
          });
        });
      });
      d3.json('../data/china-cities-population.json', function (data) {
        d3.barChart(data, {
          id: 'bar-chart-stacked',
          stacked: true,
          horizontal: true,
          aspectRatio: 0.85,
          labelX: {
            show: true,
            text: '人口（万）',
            textAnchor: 'middle'
          },
          tooltip: {
            html: function (d) {
              return d.category + ': ' + d.value + '万';
            }
          },
          legend: {
            display: 'inline-block',
            symbol: {
              shape: 'circle'
            }
          },
          margin: {
            top: '2.5em',
            bottom: '3em'
          }
        });
      });
